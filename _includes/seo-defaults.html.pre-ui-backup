{% elsif page.url contains '/services/' %}
  {% if page.url contains 'forensic-economics' %}
    {% assign seo_title = "Forensic Economics Expert | Economic Damage Analysis | Rhode Island" %}
  {% elsif page.url contains 'business-valuation' %}
    {% assign seo_title = "Business Valuation Expert | Litigation Support | New England" %}
  {% elsif page.url contains 'life-care-planning' %}
    {% assign seo_title = "Life Care Planning Economist | Future Medical Costs Expert" %}
  {% elsif page.url contains 'vocational-expert' %}
    {% assign seo_title = "Vocational Expert Services | Earning Capacity Analysis | RI" %}
  {% else %}
    {% assign seo_title = page.title | append: " | Expert Services | Skerritt Economics" %}
  {% endif %}
{% elsif page.url contains '/practice-areas/' %}
  {% if page.url contains 'personal-injury' %}
    {% assign seo_title = "Personal Injury Economist | Economic Loss Expert | Rhode Island" %}
  {% elsif page.url contains 'medical-malpractice' %}
    {% assign seo_title = "Medical Malpractice Economist | Damage Calculations | New England" %}
  {% elsif page.url contains 'employment' %}
    {% assign seo_title = "Employment Economist | Wrongful Termination Expert | RI & MA" %}
  {% elsif page.url contains 'commercial-disputes' %}
    {% assign seo_title = "Commercial Litigation Economist | Business Loss Expert | RI" %}
  {% else %}
    {% assign seo_title = page.title | append: " Expert | Skerritt Economics" %}
  {% endif %}
{% elsif page.url contains '/locations/' %}
  {% assign city_state = page.title | split: ', ' %}
  {% assign seo_title = "Forensic Economist " | append: city_state[0] | append: " " | append: city_state[1] | append: " | Economic Expert Witness" %}
{% elsif page.url == '/about/' %}
  {% assign seo_title = "Christopher Skerritt MBA | Forensic Economist | 25+ Years Experience" %}
{% elsif page.url == '/contact/' %}
  {% assign seo_title = "Contact Economic Expert | Schedule Consultation | (203) 605-2814" %}
{% elsif page.url == '/blog/' %}
  {% assign seo_title = "Economic Expert Blog | Forensic Economics Insights | Case Studies" %}
{% elsif page.layout == 'post' %}
  {% assign seo_title = page.title | append: " | Skerritt Economics Blog" %}
{% else %}
  {% assign seo_title = page.title | append: " | " | append: site.title %}
{% endif %}

{% comment %} Optimized Meta Descriptions {% endcomment %}
{% if page.description %}
