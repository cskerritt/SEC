  {% assign seo_description = site.description | truncate: 155 %}
{% endif %}

{% comment %} Apply the optimized values {% endcomment %}
{% unless page.title %}
  {% assign page.title = seo_title %}
{% endunless %}

{% unless page.description %}
  {% assign page.description = seo_description %}
{% endunless %}