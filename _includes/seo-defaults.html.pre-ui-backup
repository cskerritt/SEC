  {% else %}
    {% assign seo_description = site.data.seo.meta_descriptions.services | truncate: 155 %}
  {% endif %}
{% elsif page.url contains '/practice-areas/' %}
  {% if page.url contains 'personal-injury' %}
    {% assign seo_description = "Personal injury economic expert calculating lost wages, future earnings, and household services value. Serving attorneys throughout Rhode Island, Massachusetts, and Connecticut." | truncate: 155 %}
  {% elsif page.url contains 'medical-malpractice' %}
    {% assign seo_description = "Medical malpractice economist providing damage calculations for wrongful death and injury cases. Expert testimony on economic losses. Serving New England attorneys since 1998." | truncate: 155 %}
  {% elsif page.url contains 'employment' %}
    {% assign seo_description = "Employment economist for wrongful termination and discrimination cases. Front pay, back pay, and lost benefits calculations. Expert witness serving RI, MA, CT legal professionals." | truncate: 155 %}
  {% elsif page.url contains 'commercial-disputes' %}
    {% assign seo_description = "Commercial litigation economist calculating business losses, lost profits, and breach of contract damages. Business valuation disputes expert serving New England attorneys." | truncate: 155 %}
  {% else %}
    {% assign seo_description = site.data.seo.meta_descriptions.practice_areas | truncate: 155 %}
  {% endif %}
{% elsif page.url contains '/locations/' %}
  {% assign city_state = page.title | split: ', ' %}
